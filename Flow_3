ganz = int(input("Gebe eine Ganze zahl: "))
komma = float(input("Gebe eine kommazahl ein: "))

ergebnise = []

summe = ganz + komma
ergebnise.append(["summe",summe])

differenz = abs(ganz - komma) 
ergebnise.append(["differenz",differenz])

produkt = ganz * komma
ergebnise.append(["produkt",produkt])

quotient = ganz / komma
ergebnise.append(["qutient",quotient])

ganz_quotient = ganz // komma
ergebnise.append(["Ganzer quotient",ganz_quotient])

modulo = ganz % komma
ergebnise.append(["modulo",modulo])

potenz = ganz ** 3
ergebnise.append(["potenz",potenz])

gerundet = int(komma)
ergebnise.append(["gerundet",gerundet])

for i in range(len(ergebnise)):
    print(f"{ergebnise[i][0]} ist {ergebnise[i][1]}")
